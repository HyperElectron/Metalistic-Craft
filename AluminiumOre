package periodicraft;

import java.util.Random;

import net.minecraft.block.Block;
import net.minecraft.block.BlockOre;
import net.minecraft.client.renderer.texture.IconRegister;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.Item;

public class AluminiumOre extends BlockOre{

  public AluminiumOre(int par1) {
		super(par1); 
		
	    this.setHardness(2.0f);
		this.setStepSound(Block.soundStoneFootstep);
		this.setUnlocalizedName("aluminiumOre");
		this.setCreativeTab(PeriodicraftMod.tabMetalistic);
	}

	@Override
	public void registerIcons(IconRegister reg){
		this.blockIcon = reg.registerIcon("periodicraft:aluminium_ore");
	}
}
