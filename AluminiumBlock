package periodicraft;

import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraft.client.renderer.texture.IconRegister;
import net.minecraft.creativetab.CreativeTabs;

public class AluminiumBlock extends Block{

  public AluminiumBlock(int par1, Material par2Material) {
		super(par1, par2Material);
		
		{

		this.setHardness(2.0f);
		this.setStepSound(Block.soundMetalFootstep);
		this.setUnlocalizedName("aluminiumBlock");
		this.setCreativeTab(PeriodicraftMod.tabMetalistic);
		}
	}

	@Override
	public void registerIcons(IconRegister reg){
		this.blockIcon = reg.registerIcon("periodicraft:aluminium_block");
	}
}

